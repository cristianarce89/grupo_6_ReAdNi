<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head.ejs') %>
    <link href="/stylesheets/header.css" rel="stylesheet">
    <link href="/stylesheets/loginregister.css" rel="stylesheet">
    <link href="/stylesheets/footer.css" rel="stylesheet">
    <script src="/javascripts/validations/register-validation.js"></script>
    <title>Registro de usuarios</title>
</head>

<body>
    <header>
        <!--------- BARRA NAVEGADOR CELULAR Y TABLET ---------->
        <%- include('../partials/headerMobile.ejs') %> 
        <!--------- BARRA NAVEGADOR DESKTOP ---------->
        <%- include('../partials/headerDesktop.ejs') %> 
    </header>
    <main class="login-register-container">
        <section class="registro">
            <div class="form-container">
                <a href="/"><i class="fa-solid fa-circle-left fa-2x"></i></a>
                <h1>registro</h1>
                <form action="/users/userEdit/<%= userEditar.id%>" method="POST" enctype="multipart/form-data">
                    <div class="control">
                        <label for="nombre">Nombre completo</label>
                        <input type="text" name="nombre" id="nombre" value="<%= userEditar.nombre%>">
                    </div>
                    <div class="control">
                        <label for="email">Correo electrónico</label>
                        <input type="email" name="email" id="email" value="<%= userEditar.email%>">
                    </div>
                    <div class="control">
                        <label for="password">Contraseña</label>
                        <input type="password" name="password" id="password" value="<%= userEditar.password%>">
                    </div>
                    <div class="control">
                        <label for="repetir_password">Repite La contraseña</label>
                        <input type="password" name="repetir_password" id="repetir_password" value="<%= userEditar.password%>">
                    </div>
                    <div class="control">
                        <label for="cellphone">Numero telefonico</label>
                        <input type="tel" name="cellphone" id="cellphone" value="<%= userEditar.cellphone%>">
                    </div>
                    <div class="control">
                        <label for="direccion">Direccion de la vivienda</label>
                        <input type="text" name="direccion" id="direccion" value="<%= userEditar.direccion%>">
                    </div>
                    <div>
                        <input type="file" id="imagen" name="imagen" class="formulario__input" multiple value="<%= userEditar.imagen%>">
                        <button type="button" id="boton_add" class="boton_add">Agregar imagen de perfil</button>
                    </div>
                    <div class="TerminosYcondiciones">
                        <input type="checkbox"><span>Aceptas los terminos y condiciones de nuestro servicio</span>
                    </div>
                    <div class="control_boton">
                        <button type="submit" id="submit" class="">Terminar el Registro</button>
                    </div>
                </form>
                <div class="enlaces">
                    <div id="register">
                        <a href="login">¿Ya tienes una cuenta? INICIA SESIÓN</a>
                    </div>
                </div>
            </div>
        </section>
    </main>

<!--   Script para cargar la imagen -->
<script src="/javascripts/register.js"></script>

    <footer class="container-footer">
        <%- include('../partials/footer.ejs') %> 
    </footer>
</body>

</html>